<%- include('partials/header', { title: 'Log in', user: null }) %>

<div class="card" style="max-width:480px; margin: 0 auto;">
  <h1>Welcome back</h1>
  <% if (notice) { %>
    <p class="muted"><%= notice %></p>
  <% } %>
  <% if (error) { %>
    <div class="alert"><%= error %></div>
  <% } %>
  <form method="post" action="/login">
    <label>
      Email
      <input type="email" name="email" placeholder="you@team.com" required />
    </label>
    <label>
      Password
      <input type="password" name="password" required />
    </label>
    <a class="link underlined-link" href="/forgot-password">Forgot password?</a>
    <button type="submit">Log in</button>
  </form>
  <div class="auth-links">
    <a class="link underlined-link" href="/signup">Don't have an account? Sign up</a>
  </div>
</div>

<%- include('partials/footer') %>
