<%- include('partials/header', { title: 'Forgot password', user: null }) %>

<div class="card" style="max-width:480px; margin: 0 auto;">
  <h1>Reset your password</h1>
  <p class="muted">Enter your account email and we will send a reset link.</p>
  <p class="muted">If you do not receive it, check your spam/junk folder.</p>
  <% if (error) { %>
    <div class="alert"><%= error %></div>
  <% } %>
  <% if (message) { %>
    <p class="muted"><%= message %></p>
  <% } %>
  <form method="post" action="/forgot-password">
    <label>
      Email
      <input type="email" name="email" placeholder="you@team.com" required />
    </label>
    <button type="submit">Send reset link</button>
  </form>
</div>

<%- include('partials/footer') %>
