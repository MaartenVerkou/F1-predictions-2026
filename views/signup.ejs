<%- include('partials/header', { title: 'Sign up', user: null }) %>

<div class="card" style="max-width:480px; margin: 0 auto;">
  <h1>Create your account</h1>
  <% if (error) { %>
    <div class="alert"><%= error %></div>
  <% } %>
  <form method="post" action="/signup">
    <label>
      Name
      <input type="text" name="name" placeholder="The Hulk" required />
    </label>
    <label>
      Email
      <input type="email" name="email" placeholder="nico@audi.com" required />
    </label>
    <p class="muted" style="margin:-8px 0 0;">Account verification required before login.</p>
    <label>
      Password
      <input type="password" name="password" required minlength="6" />
    </label>
    <label>
      Confirm password
      <input type="password" name="passwordConfirm" required minlength="6" />
    </label>
    <button type="submit">Create account</button>
  </form>
  <div class="auth-links">
    <a class="link underlined-link" href="/login">Already have an account? Log in</a>
  </div>
</div>

<%- include('partials/footer') %>
