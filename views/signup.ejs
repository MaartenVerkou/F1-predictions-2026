<%- include('partials/header', { title: t('signup.page_title'), user: null }) %>

<div class="card" style="max-width:480px; margin: 0 auto;">
  <h1><%= t('signup.heading') %></h1>
  <% if (error) { %>
    <div class="alert"><%= error %></div>
  <% } %>
  <form method="post" action="/signup">
    <label>
      <%= t('common.name') %>
      <input
        type="text"
        name="name"
        placeholder="The Hulk"
        required
        data-name-check-url="/api/users/check-name"
        data-name-check-delay="2000"
        data-name-check-min-length="2"
        data-name-check-msg-checking="Checking name..."
        data-name-check-msg-available="Name is available."
        data-name-check-msg-taken="Name already in use."
        data-name-check-msg-error="Could not check name right now."
      />
      <span class="field-status muted" data-name-check-feedback aria-live="polite"></span>
    </label>
    <label>
      <%= t('common.email') %>
      <input type="email" name="email" placeholder="nico@audi.com" required />
    </label>
    <p class="muted" style="margin:-8px 0 0;"><%= t('signup.verify_required') %></p>
    <label>
      <%= t('common.password') %>
      <input type="password" name="password" required minlength="6" />
    </label>
    <label>
      <%= t('signup.confirm_password') %>
      <input type="password" name="passwordConfirm" required minlength="6" />
    </label>
    <button type="submit"><%= t('signup.create_account') %></button>
  </form>
  <div class="auth-links">
    <a class="link underlined-link" href="/login"><%= t('signup.has_account') %></a>
  </div>
</div>

<%- include('partials/footer') %>
