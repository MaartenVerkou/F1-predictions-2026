<%- include('partials/header', { title: 'Admin overview', user }) %>

<div class="card">
  <h1>Admin overview</h1>
  <p class="muted">Accounts, groups, memberships, and responses.</p>

  <h2>Users</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Created</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(row => { %>
        <tr>
          <td><%= row.name %></td>
          <td><%= row.email %></td>
          <td><%= new Date(row.created_at).toLocaleString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <h2 style="margin-top:24px;">Groups</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Group</th>
        <th>Owner</th>
        <th>Created</th>
      </tr>
    </thead>
    <tbody>
      <% groups.forEach(row => { %>
        <tr>
          <td><%= row.name %></td>
          <td><%= row.owner_name %></td>
          <td><%= new Date(row.created_at).toLocaleString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <h2 style="margin-top:24px;">Memberships</h2>
  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Group</th>
        <th>Role</th>
        <th>Joined</th>
      </tr>
    </thead>
    <tbody>
      <% memberships.forEach(row => { %>
        <tr>
          <td><%= row.user_name %></td>
          <td><%= row.group_name %></td>
          <td><%= row.role %></td>
          <td><%= new Date(row.joined_at).toLocaleString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <h2 style="margin-top:24px;">Responses</h2>
  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Group</th>
        <th>Question</th>
        <th>Answer</th>
        <th>Updated</th>
      </tr>
    </thead>
    <tbody>
      <% responses.forEach(row => { %>
        <tr>
          <td><%= row.user_name %></td>
          <td><%= row.group_name %></td>
          <td><%= row.question_id %></td>
          <td><%= row.answer %></td>
          <td><%= new Date(row.updated_at).toLocaleString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('partials/footer') %>
