<%- include('partials/header', { title: 'Admin overview', user }) %>
<%- include('partials/admin_nav', { active: 'overview' }) %>

<div class="card">
  <h1>Admin overview</h1>
  <p class="muted">Accounts, groups, memberships, and responses.</p>
  <% if (adminError) { %>
    <div class="alert"><%= adminError %></div>
  <% } %>
  <% if (adminSuccess) { %>
    <p class="muted"><%= adminSuccess %></p>
  <% } %>
  <h2 style="margin-top:24px;">Question Data Cleanup</h2>
  <p class="muted">Removes orphan records in <code>responses</code> and <code>actuals</code> where <code>question_id</code> no longer exists in <code>data/questions.json</code>.</p>
  <% if (!questionCleanupReport || questionCleanupReport.validQuestionCount === 0) { %>
    <div class="alert">Cleanup blocked: no valid question IDs loaded from data/questions.json.</div>
  <% } else { %>
    <p class="muted">
      Current question IDs: <strong><%= questionCleanupReport.validQuestionCount %></strong>.
      Orphan responses: <strong><%= questionCleanupReport.orphanResponses %></strong>.
      Orphan actuals: <strong><%= questionCleanupReport.orphanActuals %></strong>.
    </p>
    <% if (questionCleanupReport.orphanQuestionIds && questionCleanupReport.orphanQuestionIds.length > 0) { %>
      <div class="inline-actions" style="margin: 0 0 10px;">
        <form method="post" action="/admin/questions/cleanup" onsubmit="return confirm('Cleanup orphan question data now? This deletes old responses and actuals that no longer match current question IDs.');">
          <button type="submit">Run cleanup</button>
        </form>
      </div>
      <table class="table compact">
        <thead>
          <tr>
            <th>Orphan question_id</th>
            <th>Responses</th>
            <th>Actuals</th>
          </tr>
        </thead>
        <tbody>
          <% const orphanResponseById = {}; (questionCleanupReport.orphanResponseRows || []).forEach(row => { orphanResponseById[row.question_id] = row.count; }); %>
          <% const orphanActualById = {}; (questionCleanupReport.orphanActualRows || []).forEach(row => { orphanActualById[row.question_id] = row.count; }); %>
          <% questionCleanupReport.orphanQuestionIds.forEach(id => { %>
            <tr>
              <td><%= id %></td>
              <td><%= orphanResponseById[id] || 0 %></td>
              <td><%= orphanActualById[id] || 0 %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p class="muted">No orphan question data found. Cleanup is not needed right now.</p>
    <% } %>
  <% } %>

  <h2>Users</h2>
  <table class="table compact">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Admin</th>
        <th>Created</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(row => { %>
        <tr>
          <td><%= row.name %></td>
          <td><%= row.email %></td>
          <td><%= row.is_admin ? 'Yes' : 'No' %></td>
          <td><%= new Date(row.created_at).toLocaleString() %></td>
          <td>
            <div class="table-actions">
              <% if (row.is_admin) { %>
                <form method="post" action="/admin/users/<%= row.id %>/remove-admin">
                  <button class="secondary admin-toggle-btn" type="submit">Remove admin</button>
                </form>
              <% } else { %>
                <form method="post" action="/admin/users/<%= row.id %>/make-admin">
                  <button class="secondary admin-toggle-btn" type="submit">Make admin</button>
                </form>
              <% } %>
              <form method="post" action="/admin/users/<%= row.id %>/delete" onsubmit="return confirm('Delete this user and all their memberships/responses?')">
                <button class="secondary" type="submit">Delete user</button>
              </form>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <h2 style="margin-top:24px;">Groups</h2>
  <table class="table compact">
    <thead>
      <tr>
        <th>Group</th>
        <th>Owner</th>
        <th>Created</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% groups.forEach(row => { %>
        <tr>
          <td><%= row.name %></td>
          <td><%= row.owner_name %></td>
          <td><%= new Date(row.created_at).toLocaleString() %></td>
          <td>
            <div class="table-actions">
              <a class="link" href="/groups/<%= row.id %>/leaderboard">Leaderboard</a>
              <form method="post" action="/admin/groups/<%= row.id %>/delete" onsubmit="return confirm('Delete this group and all related data?')">
                <button class="secondary" type="submit">Delete group</button>
              </form>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <h2 style="margin-top:24px;">Memberships</h2>
  <table class="table compact">
    <thead>
      <tr>
        <th>User</th>
        <th>Group</th>
        <th>Role</th>
        <th>Joined</th>
      </tr>
    </thead>
    <tbody>
      <% memberships.forEach(row => { %>
        <tr>
          <td><%= row.user_name %></td>
          <td><%= row.group_name %></td>
          <td><%= row.role %></td>
          <td><%= new Date(row.joined_at).toLocaleString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <h2 style="margin-top:24px;">Responses</h2>
  <table class="table compact">
    <thead>
      <tr>
        <th>User</th>
        <th>Group</th>
        <th>Question</th>
        <th>Answer</th>
        <th>Updated</th>
      </tr>
    </thead>
    <tbody>
      <% responses.forEach(row => { %>
        <tr>
          <td><%= row.user_name %></td>
          <td><%= row.group_name %></td>
          <td><%= row.question_id %></td>
          <td><%= row.answer %></td>
          <td><%= new Date(row.updated_at).toLocaleString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <div class="inline-actions" style="margin-top: 10px;">
    <% if (currentResponsePage > 1) { %>
      <a class="link" href="/admin/overview?page=<%= currentResponsePage - 1 %>">Previous 50</a>
    <% } %>
    <span class="muted">Page <%= currentResponsePage %> of <%= totalResponsePages %></span>
    <% if (currentResponsePage < totalResponsePages) { %>
      <a class="link" href="/admin/overview?page=<%= currentResponsePage + 1 %>">Next 50</a>
    <% } %>
  </div>
</div>

<%- include('partials/footer') %>

