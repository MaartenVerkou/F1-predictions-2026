<%- include('partials/header', { title: t('about_page.title', { company_name: companyName }), user }) %>

<section class="hero">
  <div class="card">
    <h1><%= t('about_page.title', { company_name: companyName }) %></h1>
    <p class="muted"><%= t('about_page.last_updated') %>: February 26, 2026</p>
    <div class="inline-actions">
      <a class="link" href="#about"><%= t('about_page.nav_about') %></a>
      <a class="link" href="#terms"><%= t('about_page.nav_terms') %></a>
      <a class="link" href="#privacy"><%= t('about_page.nav_privacy') %></a>
      <a class="link" href="#contact"><%= t('about_page.nav_contact') %></a>
    </div>
  </div>

  <div class="card" id="about">
    <h2><%= t('about_page.section_about') %></h2>
    <p><%= t('about_page.about_intro_1') %></p>
    <p><%= t('about_page.about_intro_2') %></p>
    <p><%= t('about_page.about_intro_3') %></p>
  </div>

  <div class="card" id="terms">
    <h2><%= t('about_page.section_terms') %></h2>

    <h3><%= t('about_page.intended_audience') %></h3>
    <p><%= t('about_page.audience_body') %></p>

    <h3><%= t('about_page.how_it_works') %></h3>
    <p><%= t('about_page.how_body_1') %></p>
    <p><%= t('about_page.how_body_2') %></p>
    <p><%= t('about_page.how_body_3') %></p>
    <p><%= t('about_page.how_body_4') %></p>

    <h3><%= t('about_page.definitions') %></h3>
    <ul>
      <li><%= t('about_page.def_1') %></li>
      <li><%= t('about_page.def_2') %></li>
      <li><%= t('about_page.def_3') %></li>
      <li><%= t('about_page.def_4') %></li>
      <li><%= t('about_page.def_5') %></li>
    </ul>

    <h3><%= t('about_page.results') %></h3>
    <p><%= t('about_page.results_body_1') %></p>
    <p>
      <%= t('about_page.results_body_2_prefix') %>
      <a class="link" href="https://www.racingstatisticsf1.com/" target="_blank" rel="noopener noreferrer">racingstatisticsf1.com</a>
      <%= t('about_page.results_body_2_suffix') %>
    </p>
    <p><%= t('about_page.results_body_3') %></p>
    <p><%= t('about_page.results_body_4') %></p>

    <h3><%= t('about_page.private_arrangements') %></h3>
    <p><%= t('about_page.private_body_1') %></p>
    <p><%= t('about_page.private_body_2') %></p>
    <p><%= t('about_page.private_body_3') %></p>

    <h3><%= t('about_page.fair_use') %></h3>
    <p><%= t('about_page.fair_body_1') %></p>
    <p><%= t('about_page.fair_body_2') %></p>
    <p><%= t('about_page.fair_body_3') %></p>
    <p><%= t('about_page.fair_body_4') %></p>

    <h3><%= t('about_page.governing_law') %></h3>
    <p><%= t('about_page.law_body') %></p>

    <h3><%= t('about_page.liability') %></h3>
    <p><%= t('about_page.liability_body') %></p>
  </div>

  <div class="card" id="privacy">
    <h2><%= t('about_page.section_privacy') %></h2>
    <p><%= t('about_page.privacy_body_1') %></p>
    <p><%= t('about_page.privacy_body_2') %></p>
    <p><%= t('about_page.privacy_body_3') %></p>

    <h3><%= t('about_page.cookies') %></h3>
    <p><%= t('about_page.cookies_body') %></p>

    <h3><%= t('about_page.retention') %></h3>
    <p><%= t('about_page.retention_body_1') %></p>
    <p><%= t('about_page.retention_body_2') %></p>
    <p><%= t('about_page.retention_body_3') %></p>

    <h3><%= t('about_page.export') %></h3>
    <p><%= t('about_page.export_body') %></p>
  </div>

  <div class="card" id="contact">
    <h2><%= t('about_page.section_contact') %></h2>
    <p><%= t('about_page.contact_body') %> <a class="link" href="mailto:<%= contactEmail %>"><%= contactEmail %></a>.</p>
    <% if (paypalDonationUrl) { %>
      <p class="muted about-donate-copy"><%= t('about_page.donate_support_line') %></p>
      <a class="button-link" href="<%= paypalDonationUrl %>" target="_blank" rel="noopener noreferrer"><%= paypalDonationLabel %></a>
    <% } %>
  </div>
</section>

<%- include('partials/footer') %>
