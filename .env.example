NODE_ENV=development
PORT=3000
APP_DOMAIN=localhost
# Optional Docker host path for persistent app state (/app/state).
# Leave unset to use the Docker named volume `f1_state` (good for local dev).
# Example server value:
# STATE_DIR=/mnt/HC_Volume_104848136/f1/state

ADMIN_EMAILS=admin@example.com,owner@example.com
SESSION_SECRET=replace-with-long-random-secret

# Dev convenience login (disabled when NODE_ENV=production)
DEV_AUTO_LOGIN=0
DEV_AUTO_LOGIN_EMAIL=dev@example.com
DEV_AUTO_LOGIN_NAME=Dev Admin

SMTP_USER=no-reply@example.com
CONTACT_EMAIL=info@example.com
COMPANY_NAME=Company Name
SMTP_PASS=replace-with-mailbox-password
SMTP_HOST=mail.example.com
SMTP_PORT=587
SMTP_CLIENT_NAME=example.com

# Optional app behavior
PREDICTIONS_CLOSE_AT=2026-03-05T23:59:59
LEADERBOARD_ENABLED=0
# Optional override for per-question "last season" references file.
# Default: ./data/last-season-results.json
# LAST_SEASON_RESULTS_PATH=./data/last-season-results.json

# Optional PayPal donation button shown on home page
PAYPAL_DONATION_URL=www.gg
PAYPAL_DONATION_LABEL=Donate
